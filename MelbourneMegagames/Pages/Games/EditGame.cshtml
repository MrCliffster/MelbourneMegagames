@page
@model MelbourneMegagames.Pages.Games.EditGameModel
@{
    ViewData["Title"] = "Edit Game";
}

<h1>Edit Game</h1>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Game.Name" class="control-label"></label>
                <input asp-for="Game.Name" class="form-control" />
                <span asp-validation-for="Game.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.GameDate" class="control-label"></label>
                <input asp-for="Game.GameDate" class="form-control" />
                <span asp-validation-for="Game.GameDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.GameDescription" class="control-label"></label>
                <input asp-for="Game.GameDescription" class="form-control" />
                <span asp-validation-for="Game.GameDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.Excerpt" class="control-label"></label>
                <input asp-for="Game.Excerpt" class="form-control" />
                <span asp-validation-for="Game.Excerpt" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Game.IsPublished" /> @Html.DisplayNameFor(model => model.Game.IsPublished)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Game.Slug" class="control-label"></label>
                <input asp-for="Game.Slug" class="form-control" />
                <span asp-validation-for="Game.Slug" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="OurGames">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

